{
    "compilerOptions": {
        "target": "es5",
        "outDir": "commonjs/",
        "module": "commonjs",
        "lib": [
            "es2016", "dom"
        ],
        "noEmitHelpers": false,
        "declaration": true,
        "removeComments": false,
        /* emitting `use strict` made PuppetJS break */
        "allowSyntheticDefaultImports": true,
        "noImplicitUseStrict": true,
        "esModuleInterop": true,
    },
    "include": [
        "src/**/*.ts"
    ]
}